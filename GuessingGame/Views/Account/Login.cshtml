@model GuessingGame.Models.LoginModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - GuessingGame</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
    <style type="text/css">
        .error {
            padding-left: 370px;
            font-weight: bold;
            width: 1000px;
            color: red;
        }

        .pl-35pers {
            padding-left: 35%;
        }
    </style>
</head>

<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row front">
                <div class="col-md-8 row-content">
                    <h1 class="display-5 row-content__header">Welcome to the Guessing Game</h1>
                    <p class="row-content__rules">Rules:</p>
                    <ul class="row-content__text">
                        <li>Program chooses a random secret number with 4 digits.</li>
                        <li>All digits in the secret number are different.</li>
                        <li>Player has 8 tries to guess the secret number.</li>
                        <li>After each guess program displays the message "M:m; P:p" where:</li>
                        <ul>
                            <li>m - number of matching digits but not on the right places</li>
                            <li>p - number of matching digits on exact places</li>
                        </ul>
                        <li>Game ends after 8 tries or if the correct number is guessed.</li>
                    </ul>
                    <button class="btn btn-primary shadow-none start" type="submit">Start</button>
                </div>
            </div>

            <div class="row back">
                <div class="col-md-12">
                    <form asp-action="Login" class="justify-content-center">
                        <div class="form-group">
                            <h1 class="text-center" style="margin-bottom: 37px;"> Guessing Game </h1>
                        </div>
                        <div class="form-group mb-2">
                            <div class="col-md-4 px-5 mx-auto mb-3">
                                <label class="control-label" asp-for="UserName">Username:</label>
                                <input asp-for="UserName" placeholder="Username" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 mx-auto mb-3 google">
                                <a href="#" onclick="location.href='@Url.Action("GoogleLogin")'">
                                    <img src="~/Images/google.png" alt="Google Sign In" />
                                </a>
                            </div>
                            <div class="col-md-8 mx-auto">
                                <input type="submit" value="Let's go" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html> 